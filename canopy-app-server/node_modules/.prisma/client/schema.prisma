datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id       Int    @id @default(autoincrement())
  user_id  String @unique
  password String
  name     String

  @@map("Admin")
}

model Buyer {
  id               Int       @id @default(autoincrement())
  user_id          String    @unique
  password         String
  region           String
  supervisor_name  String
  supervisor_phone String
  canopies         Canopy[]
  controls         Control[]

  @@map("Buyer")
}

model Location {
  id       Int      @id @default(autoincrement())
  region   String   @unique
  address  String   @unique
  canopies Canopy[]

  @@map("Location")
}

model Canopy {
  id                 Int       @id @default(autoincrement())
  manage_number      String    @unique
  class_number       String    @unique
  location_id        Int
  buyer_id           Int?
  status_fold        Boolean?
  status_motor       Boolean?
  status_led         Boolean?
  status_sound       Boolean?
  status_inform      Boolean?
  status_temperature Float?
  status_transmit    Boolean?
  location           Location  @relation(fields: [location_id], references: [id])
  buyer              Buyer?    @relation(fields: [buyer_id], references: [id])
  controls           Control[]

  @@map("Canopy")
}

model Control {
  id        Int      @id @default(autoincrement())
  canopy_id Int
  buyer_id  Int
  fold      Boolean
  motor     Boolean
  led       Boolean
  sound     Boolean
  inform    Boolean
  timestamp DateTime
  canopy    Canopy   @relation(fields: [canopy_id], references: [id])
  buyer     Buyer    @relation(fields: [buyer_id], references: [id])

  @@map("Control")
}
